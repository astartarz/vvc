{% set view_node = fields.view_node.content|render|striptags|trim %}
{% set image = fields.field_teaser_image.content|render|striptags('<img>')|trim %}
{% set date = fields.field_date.content|render|striptags|trim %}

<div class="article-wrapper">
  <div class="row">
    <div class="col-md-9">
      <div class="article-title">
        <a href="{{ view_node }}">{{ fields.title.content }}</a>
      </div>
      {% if date is not empty %}
        <div class="article-date">
          {{ fields.field_date.content }}
        </div>
      {% endif %}
    </div>
    {% if image is not empty %}
      <div class="col-md-3">
        <div class="article-image">
          <a href="{{ view_node }}" tabindex="-1">{{ fields.field_teaser_image.content }}</a>
        </div>
      </div>
    {% endif %}
  </div>
</div>

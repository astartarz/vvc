}


/**
 * Implements hook_theme().
 */
function kwall_map_theme($existing, $type, $theme, $path) {
  $variables = array(
    'kwall_map' => array(
      'variables' => array(
        'source_text' => NULL,
      ),
      'template' => 'kwall_map',
    ),
  );
  return $variables;
}


